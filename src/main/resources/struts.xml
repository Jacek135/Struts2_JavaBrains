<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <package name="login" namespace="/" extends="struts-default">
        <action name="login" class="org.koushik.javabrains.action.LoginAction">
            <result name="success">searchForm.jsp</result>
            <result name="failure">login.jsp</result>
        </action>
    </package>


    <package name="default" namespace="/tutorials" extends="struts-default">
        <action name="getTutorial" class="org.koushik.javabrains.action.TutorialAction">
            <result name="success">/User/pages/success.jsp</result>
            <result name="failure">/User/pages/error.jsp</result>
        </action>
    </package>
</struts>